
# Your private key (64 hex characters, WITHOUT 0x prefix)
# NEVER share this file with your private key filled in!
PRIVATE_KEY=your_64_hex_private_key_without_0x

# Signature type: 0 = EOA (Externally Owned Account), 2 = Gnosis Safe Proxy
SIGNATURE_TYPE=0

# Funder address (required only if SIGNATURE_TYPE=2)
# Leave empty if using SIGNATURE_TYPE=0
FUNDER_ADDRESS=

# ------------------------------------------------------------
# API Configuration
# ------------------------------------------------------------
# Polymarket CLOB API host
POLYMARKET_HOST=https://clob.polymarket.com

# Blockchain network (Polygon = 137)
CHAIN_ID=137

# ------------------------------------------------------------
# Market Selection (REQUIRED)
# ------------------------------------------------------------
# Choose ONE: either market slug (human-readable) or token ID
# Example slugs can be found on polymarket.com URLs
MARKET_SLUG=israel-strikes-iran-by-january-31-2026
MARKET_TOKEN_ID=
MARKET_INDEX=

# ------------------------------------------------------------
# WebSocket Configuration
# ------------------------------------------------------------
# Enable real-time WebSocket for ~1 second spike detection
WSS_ENABLED=true
WSS_RECONNECT_DELAY=1.0
WSS_MAX_RECONNECT_DELAY=60.0

# ------------------------------------------------------------
# Multi-Window Spike Detection
# ------------------------------------------------------------
# Percentage change to trigger spike detection (8.0 = 8%)
SPIKE_THRESHOLD_PCT=8.0

# Time windows to check for spikes (in minutes)
# Spike detected if ANY window shows >= threshold movement
SPIKE_WINDOWS_MINUTES=10,30,60

# Filter out high-volatility periods to reduce false signals
USE_VOLATILITY_FILTER=true
MAX_VOLATILITY_CV=10.0

# Minimum spike strength to actually trade (can be higher than threshold)
MIN_SPIKE_STRENGTH=5.0

# Price history size (number of samples to keep)
PRICE_HISTORY_SIZE=3600

# ------------------------------------------------------------
# Strategy Configuration
# ------------------------------------------------------------
# Trade size in USD (must be between MIN_TRADE_USD and MAX_TRADE_USD)
DEFAULT_TRADE_SIZE_USD=2.0

# Cooldown period after trades before entering new position (seconds)
COOLDOWN_SECONDS=120

# Minimum history samples required before trading
MIN_HISTORY_FOR_ENTRY=10

# Maximum concurrent trades (1 = one position per market)
MAX_CONCURRENT_TRADES=1

# ------------------------------------------------------------
# Risk Management
# ------------------------------------------------------------
# Trade size limits
MIN_TRADE_USD=1.0
MAX_TRADE_USD=100.0

# Position time limit (seconds)
MAX_HOLD_SECONDS=3600

# Automatic exit at these P&L levels
STOP_LOSS_PCT=2.5
TAKE_PROFIT_PCT=3.0

# Slippage tolerance for orders
SLIPPAGE_TOLERANCE=0.06

# ------------------------------------------------------------
# Orderbook Guards
# ------------------------------------------------------------
# Minimum liquidity required for trading
MIN_BID_LIQUIDITY=5.0
MIN_ASK_LIQUIDITY=5.0

# Maximum spread percentage to allow trades
MAX_SPREAD_PCT=1.0

# ------------------------------------------------------------
# Behavior Toggles
# ------------------------------------------------------------
# Use Gamma API (UI price) as primary price source
# Recommended: true - matches prices shown on polymarket.com
USE_GAMMA_PRIMARY=false

# Force first entry regardless of spike detection
FORCE_FIRST_ENTRY=false

# Delay before forced first entry (seconds)
FIRST_ENTRY_AFTER_SECONDS=10

# ------------------------------------------------------------
# General Settings
# ------------------------------------------------------------
# Dry run mode: Set to false for REAL trading
# ALWAYS start with true to test!
DRY_RUN=true

# Poll interval for REST mode (seconds)
PRICE_POLL_INTERVAL_SEC=1.0

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Logging format: PLAIN or JSON
LOG_FORMAT=PLAIN

# Log file path (all sessions are appended here)
LOG_FILE=logs/bot.log
